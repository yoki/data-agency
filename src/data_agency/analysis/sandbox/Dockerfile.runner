FROM python:3.13-slim

# Pre-install trusted certificates
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

# Use trusted hosts for pip to avoid SSL issues in CI environments
RUN pip install --trusted-host pypi.org --trusted-host pypi.python.org --trusted-host files.pythonhosted.org --no-cache-dir \
    pandas \
    numpy \
    matplotlib \
    seaborn \
    scikit-learn \
    scipy \
    statsmodels \
    openpyxl 

WORKDIR /work
